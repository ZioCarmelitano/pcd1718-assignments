<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pcd.ass03.ex1.view.game.GamePresenter">
    <bottom>
        <HBox prefHeight="20.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <Button fx:id="buttonStart" contentDisplay="CENTER" maxHeight="10.0" maxWidth="10.0" mnemonicParsing="false"
                    onAction="#playOrResume">
                <HBox.margin>
                    <Insets left="5.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="buttonStop" mnemonicParsing="false" onAction="#stop" textAlignment="JUSTIFY">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
